<h1>User Details</h1>

<p>Name: <%= @user.full_name %></p>
<p>Email: <%= @user.email %></p>

<% @user.reviews.each do |review| %>
  <h4><%= review.movie.title %> | <%=review.rating_out_of_ten %>/10</h4>
  <p><%= review.text %></p>
<% end %>

<%= link_to "Back to Users Management", admin_users_path %>