<h2>Search Movies</h2>

<%= form_tag movies_path, method: "get" do %>
  <div>
    <%= label :search, :keyword %>
    <%= text_field :search, :keyword %>
  <div>
  <div>
    <%= select :search, :duration, options_for_select(MoviesHelper::DURATION_OPTIONS), { include_blank: "Choose movie duration" } %>
  </div>
  <div>
    <%= submit_tag "Search movies" %>
  </div>
<% end %>