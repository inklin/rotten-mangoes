<%= link_to "Back to Movies", movies_path %>
<hr>

<%= link_to image_tag(@movie.poster_image_url), movie_path(@movie) %>
<h2><%= @movie.title %></h2>
<h3>(<%= link_to "edit", edit_movie_path(@movie) %>, <%= link_to "delete", movie_path(@movie), method: :delete, confirm: "Are you sure?" %>)</h3>
<p><%= @movie.director %></p>
<p>Runtime: <%= @movie.runtime_in_minutes %> | Release Date: <%= @movie.release_date %></p>
<p>Description: <%= @movie.description %></p>
