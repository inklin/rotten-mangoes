<h1>Add a new movie</h2>

<%= form_for @movie do |f| %>
  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "director" %><br>
    <%= f.text_field "director" %>
  </div>
  <div>
    <%= f.label "runtime" %><br>
    <%= f.text_field "runtime_in_minutes" %>
  </div>
  <div>
    <%= f.label "description" %><br>
    <%= f.text_field "description" %>
  </div>
    <div>
    <%= f.label "poster image" %><br>
    <%= f.text_field "poster_image_url" %>
  </div>
  <div>
    <%= f.label "release date" %><br>
    <%= f.text_field "release_date" %>
  </div>
  <div>
    <%= f.submit "Save" %>
  </div>
<% end %>