<%= form_for @movie, html: { multipart: true } do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being added.
      <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="input-group">
    <%= f.label "title" %><br>
    <%= f.text_field "title"%>
  </div>
  <div class="input-group">
    <%= f.label "director" %><br>
    <%= f.text_field "director", class: "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label "runtime_in_minutes" %><br>
    <%= f.number_field "runtime_in_minutes", class: "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label "poster", "Upload poster image"%><br>
    <%= f.file_field "poster", class: "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label "remote_poster_url", "or image URL"%><br>
    <%= f.text_field "remote_poster_url", class: "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label "release date" %><br>
    <%= f.date_field "release_date", class: "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label "description" %><br>
    <%= f.text_area "description", class: "form-control" %>
  </div>
  <div class="input-group">
    <%= f.submit "Save", class: "btn btn-default" %>
  </div>
<% end %>