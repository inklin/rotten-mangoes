<h1>User Details</h1>
(<%= link_to "edit", edit_admin_user_path(@user) %>, <%= link_to "delete", admin_user_path(@user), method: :delete, data: { confirm: "Are you sure?" } %>)
<p>Name: <%= @user.full_name %></p>
<p>Email: <%= @user.email %></p>

<% @user.reviews.each do |review| %>
  <h4><%= review.movie.title %> | <%=review.rating_out_of_ten %>/10</h4>
  <p><%= review.text %></p>
<% end %>

<%= link_to "Back to Users Management", admin_users_path %>