<h1>List of all users</h1>

<%= link_to "Create new user", new_admin_user_path %>
<%= paginate @users %>
<% @users.each do |user| %>
  <div>
    <p><%= link_to user.full_name, admin_user_path(user) %> (<%= link_to "edit", edit_admin_user_path(user) %> | <%= link_to "delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" } %> )</p>
    <p><%= user.email %></p>
  </div>
<% end %>